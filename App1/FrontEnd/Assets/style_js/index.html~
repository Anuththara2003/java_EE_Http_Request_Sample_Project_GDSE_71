            </div>
            <div class="loading" id="loading">
                <div class="spinner"></div>
                <p>Loading events...</p>
            </div>
            <table id="eventTable">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Place</th>
                </tr>
